FROM python:3.12-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY gemini_weather_agent.py .
COPY gemini_server.py .
COPY o3_predictor.py .
COPY noaa_surface_pressure.py .
COPY MACHINE_LEARNING/ ./MACHINE_LEARNING/
COPY data/ ./data/

# Expose port
EXPOSE 8001

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
  CMD curl -f http://localhost:8001/health || exit 1

# Run Gemini FastAPI Server
CMD ["uvicorn", "gemini_server:app", "--host", "0.0.0.0", "--port", "8001"]
