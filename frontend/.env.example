# NASA Zeus Air Quality - Frontend Environment Variables
# Copy this to .env.local for local development or production

# IMPORTANT: API Base URL should NOT include /api suffix
# The frontend code automatically adds /api/ prefix to endpoints

# Backend API URL (REQUIRED)
# Local development:
NEXT_PUBLIC_API_URL=http://localhost:8000
# Production example:
# NEXT_PUBLIC_API_URL=https://www.nasazeus.org

# Gemini Service URL (REQUIRED)
# Local development:
NEXT_PUBLIC_GEMINI_URL=http://localhost:8001
# Production example:
# NEXT_PUBLIC_GEMINI_URL=https://www.nasazeus.org/gemini

# Site Base URL
# Local development:
NEXT_PUBLIC_SITE_URL=http://localhost:3000
# Production example:
# NEXT_PUBLIC_SITE_URL=https://www.nasazeus.org

# Application Name
NEXT_PUBLIC_APP_NAME=NASA Zeus Air Quality

# Google Maps API Key (if using Google Maps instead of Leaflet)
# Get key at: https://console.cloud.google.com/google/maps-apis
# NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=

# Analytics (Optional)
# NEXT_PUBLIC_GA_TRACKING_ID=
# NEXT_PUBLIC_SENTRY_DSN=

# Feature Flags
NEXT_PUBLIC_ENABLE_AUTH=true
NEXT_PUBLIC_ENABLE_ALERTS=true
NEXT_PUBLIC_ENABLE_AI_AGENT=true
